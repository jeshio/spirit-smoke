{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "plugins": [
        "import"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
		"max-len": [
			"error",
			{
				"code": 120,
				"tabWidth": 2,
				"ignoreComments": true,
				"ignoreUrls": true,
				"ignoreRegExpLiterals": true,
				"ignoreStrings": true
			}
		],
		"semi": ["error", "never"],
        "linebreak-style": [0, "unix"],
        "import/no-commonjs": "error",
        "implicit-arrow-linebreak": "off"
    }
}

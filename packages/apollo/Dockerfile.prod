FROM node:12-alpine

# создание директории приложения
WORKDIR /usr/src/app/packages/apollo

COPY package.json /usr/src/app/packages/apollo/
COPY yarn.lock /usr/src/app/packages/apollo/

RUN yarn install
# Если вы создаете сборку для продакшн
# RUN npm ci --only=production

COPY . .

EXPOSE 4000

# RUN chmod +x ./start.sh

# CMD ["sh", "-c", "cd /usr/src/app/packages/apollo && yarn run start"]
CMD ["sh", "-c", "ls"]

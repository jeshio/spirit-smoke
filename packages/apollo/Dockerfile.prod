FROM node:12-alpine

# создание директории приложения
WORKDIR /usr/src/app/packages/apollo

RUN yarn install
# Если вы создаете сборку для продакшн
# RUN npm ci --only=production

EXPOSE 4000

COPY . /usr/src/app/packages/apollo

RUN ls

RUN chmod +x /usr/src/app/packages/apollo/start.sh

CMD /usr/src/app/packages/apollo/start.sh
